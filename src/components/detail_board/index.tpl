<div class="detail-board cover clearfix">
	<div class="container">
		<div class="left">
			<div class="pic">
				{{detail_pic}}
			</div>
		</div>
		<div class="right">
			<h1 class="name">{{phone_name}}</h1>
			<p class="slogan">{{slogan}}</p>
			<p class="price">{{default_price}}元起</p>
			{{title_1}}
			<div class="content-wrapper J_version clearfix">{{versions}}</div>
			{{title_2}}
			<div class="content-wrapper J_color clearfix">{{colors}}</div>
			<div class="content-wrapper J_btnGroup clearfix">
				<button class="detail-btn purchase-btn" data-field="purchase">立即购买</button>
				<button class="detail-btn add-to-cart-btn" data-field="addToCart">加入购物车</button>
			</div>
		</div>
	</div>
</div>